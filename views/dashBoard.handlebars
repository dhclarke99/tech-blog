<header>
  <nav>
    <a href="/"><button class="nav-button" id="home">Home</button></a>
    <a href="/dashboard"><button class="nav-button" id="dashboard">Dashboard</button></a>

    <button class="nav-button" id="logout">Logout</button>

  </nav>
  {{log this}}
  {{#if blogs.length}}
  <h1>{{blogs.[0].user.username}}'s Dashboard</h1>
  {{/if}}




</header>

<div id="previous-posts">
  {{#each blogs as |blog| }}
    <div class="row align-center mb-5">
      <button class="blog-post button old-post" id="{{blog.id}}" data-blog_post_id="{{blog.id}}">
      <div class="col-md-12 header">
        <h2>{{blog.title}}</h2>
        <aside>{{blog.createdAt}}</aside>
      </div>
      <div class="col-md-12 body">
        <p>{{blog.body}}</p>
      </div>
    </div>
  </button>
  <div class="edit-delete">

  </div>
  <br>
  {{/each}}
</div>

<div id="post-content">


</div>
<br>
<br>
<div class="add-post">
  <button class="btn btn-primary" id="new-post">+ New Post</button>
</div>
<script src="/js/dashBoard.js"></script>
<script src="/js/logout.js"></script>