<header class="display-flex justify-space-between align-center p-2">
  <nav>
    
    <a href="/">
    <button class="btn" id="home">Home</button>
    </a>
    <button class="btn" id="dashboard">Dashboard</button>
    <a href="/login">
    <button class="btn" id="login">Login</button>
    </a>
    {{#if logged_in}}
    <button class="btn" id="logout">Logout</button>
    {{/if}}

  </nav>
  <h1>
    The Tech Blog
  </h1>



</header>

<div>
    <h2 class="login">Login</h2>
    <div class="container">
    <div class="card5">
    <form class="bucket-list-login-form">
      <div class="form-group2">
        <label for="username-login">Email:</label>
        <input class="form-input" type="text" id="email-entry" />
      </div>
      <br>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-entry" />
      </div>
      <br>
        <button class="btn btn-primary" type="register">Login</button>
       
      </div>
    </form>
  </div>
  <a href="/signup">
    <button class="btn" id="sign-up">Sign Up Instead</button>
    </a>
  </div>
<script src="/js/login.js"></script>