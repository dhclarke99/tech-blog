{{log this}}
<header class="display-flex justify-space-between align-center p-2">
  <nav>
    <a href="/"><button class="nav-button" id="home">Home</button></a>
    <a href="/dashboard"><button class="nav-button" id="dashboard">Dashboard</button></a>
   
    <button class="nav-button" id="logout">Logout</button>
 
  </nav>
  <h1>
   The Tech Blog
  </h1>

</header>

<div class="main">
<div class="row align-center mb-5">
  <div class="blog-post button" id="{{blog.user_id}}">
  <div class="col-md-12 header">
    <h2>{{blog.title}}</h2>
    <aside>Posted by {{blog.user.username}} on {{blog.createdAt}}</aside>
  </div>
  <div class="col-md-12 body">
    <p>{{blog.body}}</p>
  </div>
  </div>
</div>
<br>
</div>

<div class="row align-center mb-5">
  <div class="blogPost button" id="{{blog.user_id}}">
  <div class="col-md-12 comments">
    <h2>Comments</h2>
  </div>
  </div>
</div>
    
    {{#each blog.comments as |comments|}}
    <div class="previous-comments">
    <p>{{comments.body}}</p>
    <p>-{{comments.user.username}} on {{comments.createdAt}}</p>
    </div>
    {{/each}}


<div class="comment">
    <h2>Add A Comment</h2>
    <input id="body">
    <button id="submit"> Submit</button>

</div>
<script src="/js/logout.js"></script>
<script src="/js/blogPost.js"></script>