<header class="display-flex justify-space-between align-center p-2">
  <nav>
    
    <a href="/">
    <button class="btn" id="home">Home</button>
    </a>
    <a href="/dashboard">
    <button class="btn" id="dashboard">Dashboard</button>
    </a>
    <a href="/login">
    <button class="btn" id="login">Login</button>
    </a>
    

  </nav>
  <h1>
    The Tech Blog
  </h1>



</header>
{{log this}}
{{#each blogs as |blog| }}
<div class="row align-center mb-5">
  <button class="blog-post" id="{{blog.id}}">
  <div class="col-md-6">
    <aside>Posted by {{blog.user.username}} on {{blog.createdAt}}</aside>
    <h2>{{blog.title}}</h2>
  </div>
  <div class="col-md-6">
    <p>{{blog.body}}</p>
  </div>
  </button>
</div>
<br>
{{/each}}
<script src="/js/homePage.js"></script>
